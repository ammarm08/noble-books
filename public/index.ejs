  <meta property="og:image" content="">
  <meta property="og:type" content="website">
  <!-- GOOGLE VERIFICATION needed -->
  <meta name="google-site-verification" content="">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@bookswellapp">
  <meta name="twitter:creator" content="@ammarm08">
  <meta name="twitter:title" content="Bookswell — Book Recommendations from Famous Writers and Thinkers">
  <meta name="twitter:description" content="Book recommendations from the world's most influential scientists, novelists, and thinkers. Sort and filter results based on genre, length, age, and a handful of other factors.">
  <!-- TWITTER IMAGE needed -->
  <meta name="twitter:image:src" content="">
